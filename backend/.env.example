# Copy to .env and fill in your values. Never commit .env to git.

# MongoDB (use MongoDB Atlas for production: https://www.mongodb.com/atlas)
DATABASE_CONNECTION_URL=your_mongodb_connection_string

# Server port (optional; many hosts set PORT automatically)
PORT=7777

# JWT secret (use a long random string in production)
JWT_SECRET=your_jwt_secret

# Cloudinary (https://cloudinary.com) for resume/file uploads
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
